# LLM & Embeddings
OPENAI_API_KEY=sk-your-api-key-here

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=ensure_study_documents

# PostgreSQL Database
DATABASE_URL=postgresql://ensure_study_user:secure_password_123@localhost:5432/ensure_study
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ensure_study
DB_USER=ensure_study_user
DB_PASSWORD=secure_password_123

# Redis Cache
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-key-min-32-chars-here
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_SECRET=your-refresh-secret-min-32-chars

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=ensure-study-consumers

# PySpark Configuration
SPARK_MASTER=local[*]
SPARK_DRIVER_MEMORY=4g
SPARK_EXECUTOR_MEMORY=4g

# MLflow Tracking
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=ensureStudy

# AWS S3 (Optional - for data lake)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=ensure-study-datalake
AWS_REGION=us-east-1

# AI Models (FREE - HuggingFace)
# Get your free API key at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_your_token_here

# LLM: Mistral-7B-Instruct (best for RAG-grounded educational QA)
LLM_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# LLM Mode: 
# - true = Use HuggingFace Inference API (no download, good for testing)
# - false = Load model locally (~14GB RAM, good for production/cloud)
LLM_USE_API=true

# Embeddings: sentence-transformers (runs locally, no API needed)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384

# Application
LOG_LEVEL=INFO
ENVIRONMENT=development

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:8001
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Storage Configuration
STORAGE_MODE=auto  # 'auto', 's3', or 'local'

# Web Agent Configuration
WEB_AGENT_ENABLED=true
WEB_AGENT_SOURCES=wikipedia,khan_academy
WEB_AGENT_CACHE_TTL_HOURS=24

# SageMaker OCR Configuration (Premium OCR - Optional)
SAGEMAKER_OCR_ENABLED=false  # Set to 'true' to enable SageMaker
SAGEMAKER_OCR_ENDPOINT=ensurestudy-ocr-serverless
OCR_CACHE_TTL=604800  # 7 days in seconds
